{
  "name": "markdown-toolkit",
  "displayName": "Markdown Toolkit",
  "description": "Open Markdown preview in-place, replacing the source editor tab.",
  "version": "0.0.2",
  "publisher": "zhouyuyang",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "preview",
    "editor",
    "productivity"
  ],
  "activationEvents": [
    "onCommand:markdownToolkit.openPreviewInPlace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownToolkit.openPreviewInPlace",
        "title": "Open Markdown Preview (In Place)",
        "category": "Markdown Toolkit",
        "icon": "$(book)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdownToolkit.openPreviewInPlace",
          "group": "navigation@10",
          "when": "resourceLangId == markdown"
        }
      ],
      "editor/context": [
        {
          "command": "markdownToolkit.openPreviewInPlace",
          "group": "navigation@10",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "command": "markdownToolkit.openPreviewInPlace",
        "when": "editorTextFocus && resourceLangId == markdown"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  }
}
