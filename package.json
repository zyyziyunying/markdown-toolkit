{
  "name": "markdown-toolkit",
  "displayName": "Markdown Toolkit",
  "description": "Open Markdown preview in-place with Mermaid rendering and pan/zoom.",
  "version": "1.0.0",
  "publisher": "zhouyuyang",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "preview",
    "mermaid",
    "diagram",
    "editor",
    "productivity"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownToolkit.openPreviewInPlace",
        "title": "Open Markdown Preview (In Place)",
        "category": "Markdown Toolkit",
        "icon": "$(book)"
      },
      {
        "command": "markdownToolkit.exitPreviewInPlace",
        "title": "Exit Markdown Preview (In Place)",
        "category": "Markdown Toolkit",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdownToolkit.openPreviewInPlace",
          "group": "navigation@10",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "markdownToolkit.exitPreviewInPlace",
          "group": "navigation@11",
          "when": "activeCustomEditorId == vscode.markdown.preview.editor"
        }
      ],
      "editor/context": [
        {
          "command": "markdownToolkit.openPreviewInPlace",
          "group": "navigation@10",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "markdownToolkit.exitPreviewInPlace",
          "group": "navigation@11",
          "when": "activeCustomEditorId == vscode.markdown.preview.editor"
        }
      ],
      "webview/context": [
        {
          "command": "markdownToolkit.exitPreviewInPlace",
          "group": "navigation@11",
          "when": "activeCustomEditorId == vscode.markdown.preview.editor"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "command": "markdownToolkit.openPreviewInPlace",
        "when": "editorTextFocus && resourceLangId == markdown"
      }
    ],
    "markdown.previewScripts": [
      "./media/mermaid.min.js",
      "./media/mermaidFocusMode.js",
      "./media/mermaidInteraction.js",
      "./media/mermaidRenderer.js",
      "./media/mermaidPreview.js"
    ],
    "markdown.previewStyles": [
      "./media/mermaidPreview.css"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  }
}
